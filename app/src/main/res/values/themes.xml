<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WantedPreOnBoarding" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name = "NewsTitle" parent="@android:style/TextAppearance.Medium">
        <item name= "android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight">18.15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name = "NewsWriter" parent="@android:style/TextAppearance.Medium">
        <item name= "android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name = "NewsWritedTime" parent="@android:style/TextAppearance.Medium">
        <item name= "android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name = "NewsDescription" parent="@android:style/TextAppearance.Medium">
        <item name= "android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">14.52dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name = "CategoryTitle" parent="@android:style/TextAppearance.Medium">
        <item name= "android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">29.05dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>